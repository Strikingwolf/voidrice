#!/bin/bash

file=$(find $1 -type f  -not -path "*/latex.out/*" -not -path "*template-notes.tex" | grep -E ".*\.(djvu|pdf|tex|md)\$" | sed "s|$1/||" | sort -r | $MENU -i -l 10 | sed 's| |\\\ |g')


echo $file

[ -z "$file" ] && exit
ext="${file##*.}"

if [ "$ext" == "djvu" ] || [ "$ext" == "pdf" ]; then
	zathura "$1/$file"
else
	$TERMINAL -e $EDITOR "$1/$file"
fi
